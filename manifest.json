{
  "name": "CLOVI",
  "description": "make youtube shoppable",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "./src/service/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content-script/content-script.js"],
      "matches": ["https://www.youtube.com/*"],
      "css": ["src/content-script/cs-styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/images/clovi-logo.png", "src/content-script/main.js" ],
      "matches": [ "https://www.youtube.com/*" ]
    }
  ],
  "action": {
    "default_title": "Click to show UI again.",
    "default_icon": "assets/images/clovi-logo.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  }
}