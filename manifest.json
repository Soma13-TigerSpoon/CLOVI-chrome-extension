{
  "name": "CLOVI",
  "description": "make youtube shoppable",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "src/service/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["src/content-script/content-script.js"],
      "matches": ["https://www.youtube.com/*", "https://music.youtube.com/*"],
      "css": ["src/content-script/cs-styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/images/clovi-logo.png", "src/content-script/main.js" ],
      "matches": [ "https://www.youtube.com/*" ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/images/clovi-logo.png"
  },
  "options_page": "src/options/options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  }
}
